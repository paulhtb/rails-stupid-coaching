<div class="qna">
  <div class="question">
    <p><%= params["question"] %></p>
    <p><em> - You</em></p>
  </div>
  <div class="answer">
    <% if params["question"] == "I am going to work" %>
    <h4><%= @coach[0] %></h4>
    <% elsif params["question"].end_with?("?") %>
    <h4><%= @coach[1] %></h4>
    <% else %>
    <h4><%= @coach[2] %></h4>
    <% end %>
    <p><em> - Your Coach</em></p>
  </div>
</div>

<%= link_to "Ask another question", ask_path %>
